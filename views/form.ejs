<% layout('app') %>

<h2>Hi,</h2>

<p>We want to connect with you!</p>

<form action="/" method="post">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <!-- personal info -->
  <div>
    <div class="form-group">
      <label for="">First Name</label>
      <input type="text" class="form-control" name="firstName">
    </div>

    <div class="form-group">
      <label for="">Last Name</label>
      <input type="text" class="form-control" name="lastName">
    </div>

    <div class="form-group">
      <label for="">Email</label>
      <input type="email" class="form-control" name="email">
    </div>

    <div class="form-group">
      <label for="">Phone</label>
      <input type="tel" class="form-control" name="phone">
    </div>

    <div>
      <label for="">Gender</label>

      <div>
        <label class="radio-inline">
          <input type="radio" name="gender" value="male"> Male
        </label>
        <label class="radio-inline">
          <input type="radio" name="gender" value="female"> Female
        </label>
      </div>
    </div>

    <hr>

    <div class="checkbox">
      <label>
        <input id="wantsToConnectCheckbox" type="checkbox" name="wantsToConnect">
        Would you like to connect with us?
      </label>
    </div>

    <div id="contactPreferenceDiv" class="form-group">
      <label for="">What is the best way to contact you?</label>
      <select name="contactPreference">
        <option value="call">call</option>
        <option value="text">text</option>
        <option value="email">email</option>
      </select>
    </div>
  </div>

  <hr>

  <!-- church info -->
  <div>
    <div class="checkbox">
      <label>
        <input id="goesToChurchCheckbox" type="checkbox" name="goesToChurch">
        Do you go to church?
      </label>
    </div>

    <div id="churchForm">
      <div class="form-group">
        <label for="">Church Name</label>
        <input type="text" class="form-control" name="churchName">
      </div>

      <!-- address -->
      <div class="form-group">
        <label for="">What city is it in?</label>
        <input type="text" class="form-control" name="churchCity">
      </div>

      <div class="statesSelect form-group" data-name="churchSelect">
        <label for="">State</label>
      </div>
    </div>
  </div>

  <hr>

  <!-- community group -->
  <div>
    <div class="checkbox">
      <label>
        <input id="partOfCommunityGroupCheckbox" type="checkbox" name="partOfGroup">
        Are you a part of a community group?
      </label>
    </div>

    <div id="communityGroupForms">
      <div id="communityGroupFormsContainer"></div>

      <button id="addCommunityGroupBtn" type="button" class="btn btn-default">
        +
      </button> Add another group
    </div>
  </div>

  <hr>

  <div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>

